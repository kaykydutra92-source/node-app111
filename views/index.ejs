<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Listings</title>
  <style>
    body { font-family: system-ui, Arial, sans-serif; padding: 16px; }
    table { border-collapse: collapse; width: 100%; }
    th, td { padding: 8px 10px; border-bottom: 1px solid #eee; text-align: left; }
    code { font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace; }
    .tag { font-size: 12px; padding: 2px 6px; border-radius: 4px; background: #eef; color: #225; }
  </style>
</head>
<body>
  <h1>Detected Tokens</h1>
  <table>
    <thead>
      <tr>
        <th>Mint</th>
        <th>First Seen</th>
        <th>Program</th>
        <th>Verified</th>
        <th>Tx</th>
      </tr>
    </thead>
    <tbody>
      <% (tokens || []).forEach(t => { %>
        <tr>
          <td><code><%= t.token_address %></code></td>
          <td><%= new Date((t.first_seen||0)*1000).toLocaleString() %></td>
          <td><%= t.program_id || 'Unknown' %></td>
          <td><span class="tag"><%= t.verified ? 'yes' : 'no' %></span></td>
          <td>
            <% if (t.liquidity_tx) { %>
              <a href="https://solscan.io/tx/<%= t.liquidity_tx %>" target="_blank">solscan</a>
            <% } else { %>
              â€”
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
